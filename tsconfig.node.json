{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2023"],
      "module": "ESNext",
      "skipLibCheck": true,
  
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "isolatedModules": true,
      "moduleDetection": "force",
      "noEmit": true,
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "paths": {
        "lily-utils": [ "packages/lily-utils/src"],
        "lily-utils/*": [ "packages/lily-utils/src*"],
        "lily-types": [ "packages/lily-types/src"],
        "lily-types/*": [ "packages/lily-types/src/*"],
        "lily-query": [ "packages/lily-query/src"],
        "lily-query/*": [ "packages/lily-query/src/*"]
      },
      "baseUrl": "src",
    },
    "include": ["vite.config.ts"]
}
  